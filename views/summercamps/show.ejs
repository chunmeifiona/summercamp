<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-8">
            <div class="card mb-3">
                <img src="<%= summercamp.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= summercamp.title %>
                    </h5>
                    <p class="card-text">
                        <%= summercamp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= summercamp.location %>
                    </li>
                    <li class="list-group-item">
                        $<%= summercamp.price %>.00 day
                    </li>
                </ul>
                <div class="card-body">
                    <a href=" /summercamps" class="card-link btn btn-info">Back</a>
                    <a href="/summercamps/<%= summercamp._id%>/edit" class="card-link btn btn-danger">Edit</a>
                    <form class="d-inline" action="/summercamps/<%= summercamp._id%>?_method=DELETE" method="POST"">
                    <button class=" card-link btn btn-danger">Delete</button></form>
                </div>
            </div>

        </div>
        <div class="col-4">
            <h2>Leave a Review</h2>
            <form action="/summercamps/<%=summercamp._id%>/reviews" method="POST" class="mb-3 validated-form"
                novalidate>
                <div>
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for(let review of summercamp.reviews){ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating%>
                        </h5>
                        <p class="card-text">Review: <%= review.body %>
                        </p>
                        <form action="/summercamps/<%=summercamp._id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn-sm btn-danger">Delete This Review</button>
                        </form>

                    </div>
                </div>
                <% } %>
        </div>
    </div>